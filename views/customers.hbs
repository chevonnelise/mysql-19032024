{{#extends "base"}}

{{#block "content"}}
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Rating</th>
            <th>Company ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each customers}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.rating}}</td>
            <td>{{this.company_name}}</td>
            <td>
                <a href="/delete-customers//{{this.customer_id}}" class="btn btn-danger btn-sm">Delete</a>
            </td> 
        </tr>
        {{/each}}
    </tbody>
<form method="post">
    <div>
        <label>Search for customer by first/last name</label>
        <input type="text" name="name" class="form-control"/>
        <button type="submit" class="btn btn-light" >Search</button>
    </div>
</form>
</table>
{{/block}}

{{/extends}}